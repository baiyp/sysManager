<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.manager.announcement.dao.AnnouncementDao">
	<!-- 获取公告信息-->	
	<select id="getAnnouncement" parameterType="java.lang.Integer" resultType="com.manager.sys.model.Announcement">  
  		SELECT a.*,u.user_name as userName FROM announcement a left join sys_user u on a.user_id = u.id where a.del_Flag=0 and a.id=#{id}
    </select>
 
    <select id="queryAnnouncement" resultType="com.manager.sys.model.Announcement">  
  		SELECT a.*,u.user_name as userName FROM announcement a left join sys_user u on a.user_id = u.id where a.del_Flag=0  <!--limit #{pageNo},#{pageSize}-->
    </select>

    <!-- 添加公告信息 -->
    <insert id="addAnnouncement" parameterType="com.manager.sys.model.Announcement" useGeneratedKeys="true" keyProperty="id">
    	insert into announcement(title,content,user_id,create_Date) values (#{title},#{content},#{userId},#{create_Date})
    </insert>
     <!-- 添加公告信息 -->
    <update id="updateAnnouncement" parameterType="com.manager.sys.model.Announcement"> 
    	update announcement set title=#{title},content=#{content},update_Date=#{update_Date} where id = #{id} 
    </update>
     <!-- 删除公告信息 -->
    <update id="deleteAnnouncement" parameterType="java.util.List"> 
    	update announcement set del_flag=1 where id in
		<foreach collection="list" item="item" index="index" open="(" separator="," close=")" >  
        	#{item}  
    	</foreach> 
    </update>
</mapper>