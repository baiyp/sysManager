<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.manager.sys.dao.UserDao">
	<!-- 根据编号获得用户 -->	
	<select id="getUser" parameterType="com.manager.sys.model.User" resultType="com.manager.sys.model.User">  
  		SELECT * FROM sys_user
    </select>
    
    <!-- 根据编号获得用户 -->	
	<select id="findByUsername" parameterType="java.lang.String" resultType="java.lang.Integer">  
  		SELECT count(*) FROM sys_user where login_name =#{username} 
    </select>
    
    <!-- 根据编号获得用户 -->	
	<select id="findByLoginUserByName" parameterType="java.lang.String" resultType="com.manager.sys.model.User">  
  		SELECT * FROM sys_user where login_name =#{loginUser} 
    </select>

    <!-- 验证用户登陆 -->
	<select id="userLogin" parameterType="com.manager.sys.model.User" resultType="com.manager.sys.model.User">
		select
			*
		from sys_user where
		login_name=#{login_name} and password=#{password}
	</select>
    
    	
</mapper>