<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.manager.advertisement.dao.AdvertisementDao">
	<!-- 获取广告信息-->	
	<select id="getAdvertisement" parameterType="java.lang.Integer" resultType="com.manager.sys.model.Advertisement">  
  		SELECT a.* FROM advertisement a  where a.del_Flag=0 and a.id=#{id}
    </select>
 	<!-- 获取广告信息-->
    <select id="queryAdvertisement" resultType="com.manager.sys.model.Advertisement">  
  		SELECT a.* FROM advertisement a where a.del_Flag=0
    </select>

    <!-- 添加广告信息 -->
    <insert id="addAdvertisement" parameterType="com.manager.sys.model.Advertisement" useGeneratedKeys="true" keyProperty="id">
    	insert into advertisement(title,imagePath,url,create_date,create_user) values (#{title},#{imagePath},#{url},#{create_Date},#{create_user})
    </insert>
     <!-- 更新广告信息 -->
    <update id="updateAdvertisement" parameterType="com.manager.sys.model.Advertisement"> 
    	update advertisement set title=#{title},content=#{content},update_Date=#{update_Date} where id = #{id} 
    </update>
     <!--删除广告信息 -->
    <update id="deleteAdvertisement" parameterType="java.util.List"> 
    	update advertisement set del_flag=1 where id in
		<foreach collection="list" item="item" index="index" open="(" separator="," close=")" >  
        	#{item}  
    	</foreach> 
    </update>
</mapper>